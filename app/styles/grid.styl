/*-- Style for the Participant Grid app -----------------------------------------------*/

.participant-grid
	position relative

.participant
	width 100px
	height 100px
	border 1px solid #ddd
	background-color #888
	margin 1px
	font-family 'helvetica neue', sans-serif
	color #fff
	position relative
	display inline-block
	transition 1s background-color

.participant.choice-a
	background-color #03588C

.participant.choice-b
	background-color #1763A6

.participant.choice-c
	background-color #419CA6

.participant.choice-d
	background-color #54BF83

.participant.choice-e
	background-color #8DBF41

.participant .id-text
	font-size 1em
	text-align center

.participant .choice-text
	font-size 2em
	position absolute
	top 50%
	line-height 1em
	margin-top -.5em
	left 0
	right 0
	text-align center

