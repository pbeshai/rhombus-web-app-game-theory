/*-- Style for the Participant Grid app -----------------------------------------------*/
@import "nib"

.participant-grid
	position relative

.participant
	width 100px
	height 100px
	border 1px solid #ddd
	background-color #888
	margin 1px
	font-family 'helvetica neue', sans-serif
	color #fff
	position relative
	display inline-block
	transition 1s background-color
	border-radius 4px

.participant.choice-a
	background-color #03588C

.participant.choice-b
	background-color #1763A6

.participant.choice-c
	background-color #419CA6

.participant.choice-d
	background-color #54BF83

.participant.choice-e
	background-color #8DBF41

.participant.participant-here
	background-color rgb(51, 141, 23)

.participant .id-text
	font-size 1.4em
	text-align center
	margin-top: 4px

.participant .choice-text
	font-size 4em
	position absolute
	top 60%
	line-height 1em
	margin-top -.5em
	left 0
	right 0
	text-align center

.participant .medium-text
	font-size 2em
	position absolute
	top 55%
	line-height 1em
	margin-top -.5em
	left 0
	right 0
	text-align center


.participant.played
	background-color #333


.participant.results .score
	top 43%

.participant.results .partner-result
	position absolute
	bottom 0
	left 0
	right 0
	text-align center
	background rgba(0,0,0,.2)
	border-radius 4px

.participant.results .partner-id
	line-height 1em
	margin-top 4px
	font-size .9em

.participant.results .partner-score
	font-size 1.2em
	margin-bottom 1px

.participant.results.choices-AA
	background-color #080

.participant.results.choices-AB
	background-color #800

.participant.results.choices-BA
	background-color #0C0

.participant.results.choices-BB
	background-color #C00
