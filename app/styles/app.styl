@import "nib"


#content-outer
	width: 960px;
	margin: auto;


/** temporary debug nav */
#debug-nav {
	position: absolute;
	bottom: 0;
	background: #eee;
	padding: 4px 4px 0 4px;
	border-radius: 4px 4px 0 0;
}


#canvas-container {
	width: 800px;
	height: 600px;
}

#main-content {
	padding: 20px;
}


.clicker-toolbar button {
	margin-right: 10px;
}


/** Clicker Inputs **/

.clicker {
	width: 140px;
	border: 1px solid #ccc;
	padding: 10px;
	display: inline-block;
	margin: 10px 20px;
	border-radius: 4px;
}

.clicker-id {
	text-align: center;
	margin: 0 0 5px;
}

.clicker-btn.labeled {
	text-align: left;
	font-weight: normal;
}
.clicker-btn b {
	padding: 8px;
	margin-right: 3px;
	background: rgba(0,0,0,.1);
}

.clicker-btn {
	font-weight: bold;
}


/** Status bar **/
.server-status {
	background: #eee;
	border: 1px solid #ccc;
	border-top: 0;
	padding: 10px;
}

.server-status.server-status-tiny {
	padding: 2px;
	line-height: .75em;
	font-size: .75em;
}

.server-status.server-status-tiny li {
	line-height: .75em;
}

.server-status ul {
	margin-bottom: 0;
}

.circle-status {
	width: 1em;
	height: 1em;
	display: inline-block;
	border-radius .5em
	background-color #ccc
	vertical-align text-top
	margin-top: 1px
}

.circle-status.status-on {
	background-color #5bb75b
}
.circle-status.status-off {
	background-color #da4f49
}

.not-connected > .accepting-choices {
	display: none;
}

.v-spacing ,.bottom-spacing {
	margin-bottom: 12px;
}

.v-spacing, .top-spacing {
	margin-top: 12px;
}

.control-panel-group {
	margin-bottom: 32px;
}